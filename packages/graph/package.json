{
  "name": "graph",
  "version": "0.0.0",
  "private": true,
  "description": "GraphQL API for WAVES app",
  "scripts": {
    "dev": "concurrently \"yarn run node\" \"wait-port localhost:8020 && yarn run local\"",
    "local": "yarn codegen && yarn deploy:local",
    "node": "cd node/docker && docker-compose up",
    "codegen": "graph codegen",
    "build": "graph build",
    "deploy": "graph deploy --node https://api.studio.thegraph.com/deploy/ waves-base-goerli",
    "create:local": "graph create --node http://localhost:8020/ waves-base-goerli",
    "remove:local": "graph remove --node http://localhost:8020/ waves-base-goerli",
    "deploy:local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 waves-base-goerli",
    "test": "graph test"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "0.56.0",
    "@graphprotocol/graph-ts": "0.31.0"
  },
  "devDependencies": {
    "matchstick-as": "0.5.2"
  }
}
