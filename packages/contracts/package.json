{
  "name": "contracts",
  "version": "0.0.7",
  "private": true,
  "description": "Contracts for Waves Protocol",
  "scripts": {
    "anvil": "source .env && anvil --fork-url $ANVIL_FORK_URL --chain-id $ANVIL_CHAIN_ID",
    "dev": "yarn run wagmi &&  concurrently 'vite --host' 'yarn run dev:api'",
    "dev:foundry": "yarn run dev & wagmi generate --watch & npm run anvil",
    "lint": "prettier --write \"**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit",
    "wagmi": "wagmi generate",
    "build": "yarn run wagmi",
    "deploy:anvil": "source .env && forge create contracts/src/Counter.sol:Counter --rpc-url http://127.0.0.1:8545 --private-key 0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80 --legacy",
    "deploy:op-goerli": "source .env && FOUNDRY_PROFILE=op-goerli forge script contracts/script/OPGoerli.s.sol:OpScript --private-key $FORGE_PRIVATE_KEY --etherscan-api-key $ETHERSCAN_API_KEY --broadcast",
    "deploy:base-goerli": "source .env && FOUNDRY_PROFILE=base-goerli forge script contracts/script/BaseGoerli.s.sol:BaseScript --private-key $FORGE_PRIVATE_KEY --etherscan-api-key $ETHERSCAN_API_KEY --broadcast",
    "deploy:zora-goerli": "source .env && FOUNDRY_PROFILE=zora-goerli forge script contracts/script/ZoraGoerli.s.sol:ZoraScript --private-key $FORGE_PRIVATE_KEY --etherscan-api-key $ETHERSCAN_API_KEY --broadcast",
    "deploy:mode-sepolia": "source .env && FOUNDRY_PROFILE=mode-sepolia forge script contracts/script/ModeSepolia.s.sol:ModeScript --private-key $FORGE_PRIVATE_KEY --etherscan-api-key $ETHERSCAN_API_KEY --broadcast"
  },
  "dependencies": {
    "@ethereum-attestation-service/eas-contracts": "^1.0.0-beta.0",
    "@opengsn/contracts": "^3.0.0-beta.6",
    "@openzeppelin/contracts": "4.9.3",
    "@openzeppelin/contracts-upgradeable": "4.9.3"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "3.0.4",
    "@nomicfoundation/hardhat-foundry": "1.0.3",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "3.0.0",
    "@nomicfoundation/hardhat-verify": "1.1.1",
    "@typechain/ethers-v6": "^0.4.0",
    "@typechain/hardhat": "^8.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "@types/node": "^20.5.1",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.3",
    "@wagmi/cli": "^1.3.0",
    "chai": "^4.2.0",
    "hardhat": "2.17.1",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-deploy": "0.11.37",
    "hardhat-deploy-ethers": "0.4.1",
    "hardhat-gas-reporter": "^1.0.8",
    "solidity-coverage": "^0.8.1",
    "ts-node": ">=8.0.0",
    "typechain": "^8.2.0"
  }
}
