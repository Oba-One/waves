{
  "name": "api",
  "license": "MIT",
  "version": "0.0.0",
  "private": true,
  "description": "API for WAVES app",
  "repository": {
    "url": ""
  },
  "keywords": [
    "node",
    "fastify",
    "typescript",
    "api"
  ],
  "main": "dist/index.js",
  "scripts": {
    "docker:build": "docker build -t api .",
    "docker:run": "docker run -p 8080:8080 api",
    "format": "yarn prettier && yarn lint",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint . --ext .ts,.tsx --quiet --fix",
    "dev": "bob-tsm --node-env=dev --cjs --watch=src src/index.ts",
    "test": "cross-env jest",
    "start": "bob-tsm --node-env=prod --cjs src/index.ts"
  },
  "dependencies": {
    "@ethereum-attestation-service/eas-sdk": "^1.0.0-beta.0",
    "@fastify/cookie": "8.3.0",
    "@fastify/cors": "8.2.1",
    "@fastify/helmet": "10.1.0",
    "@fastify/sensible": "5.2.0",
    "@fastify/session": "10.1.1",
    "bob-tsm": "^1.1.2",
    "dotenv": "^16.0.3",
    "ethers": "5.5.1",
    "fastify": "4.14.1",
    "node-fetch": "^3.3.1",
    "siwe": "1.1.6",
    "tap": "^16.3.4"
  },
  "devDependencies": {
    "@types/node-fetch": "2.5.12",
    "@types/supertest": "2.0.12",
    "@types/tap": "^15.0.8",
    "cross-env": "^7.0.3",
    "esbuild": "^0.17.12",
    "express-session": "1.17.3",
    "supertest": "6.3.3"
  },
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node"
  }
}
