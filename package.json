{
  "name": "waves",
  "version": "0.0.7",
  "private": true,
  "scripts": {
    "lint": "pnpm recursive run lint",
    "dev": "concurrently -n \"APP,WEB,API,CONTRACTS\" -c \"bgBlue.bold,bgMagenta.bold,bgCyan.bold,bgWhite.bold\" \"pnpm run dev:app\" \"pnpm run dev:web\" \"pnpm run dev:api\" \"pnpm run dev:contracts\"",
    "dev:app": "pnpm --filter 'app' run dev",
    "dev:web": "pnpm --filter 'web' run dev",
    "dev:api": "pnpm --filter 'api' run dev",
    "dev:contracts": "pnpm --filter 'contracts dev",
    "deploy:op": "pnpm --filter 'contracts' run deploy:waves --network op",
    "deploy:base": "pnpm --filter 'contracts' run deploy:base --network base",
    "deploy:zora": "pnpm --filter 'contracts' run deploy:zora --network zora",
    "deploy:op-goerli": "pnpm --filter 'contracts' run deploy:waves-goerli --network op-goerli",
    "deploy:base-goerli": "pnpm --filter 'contracts' run deploy:base-goerli --network base-goerli",
    "deploy:zora-goerli": "pnpm --filter 'contracts' run deploy:zora-goerli --network zora-goerli",
    "deploy:polygon-mumbai": "pnpm --filter 'contracts' run deploy:polygon-mumbai --network polygon-mumbai"
  },
  "dependencies": {
    "dotenv": "16.3.1",
    "ethers": "^6.8.1",
    "viem": "^1.19.9",
    "siwe": "2.1.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "concurrently": "8.2.2",
    "eslint": "^8.50.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2",
    "wait-port": "1.1.0"
  }
}
