{
  "name": "syn-waves",
  "version": "0.0.4",
  "private": true,
  "workspaces": [
    "api",
    "clients/*"
  ],
  "scripts": {
    "anvil": "source .env && anvil --fork-url $ANVIL_FORK_URL --chain-id $ANVIL_CHAIN_ID",
    "dev": "npm run wagmi && yarn workspace wave-collector dev",
    "dev:foundry": "npm run dev & wagmi generate --watch & npm run anvil",
    "deploy": "source .env && forge create contracts/src/Counter.sol:Counter --rpc-url $FORGE_RPC_URL --private-key $FORGE_PRIVATE_KEY --etherscan-api-key $ETHERSCAN_API_KEY --verify",
    "deploy:anvil": "source .env && forge create contracts/src/Counter.sol:Counter --rpc-url http://127.0.0.1:8545 --private-key 0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80 --legacy",
    "deploy:optimism-goerli": "source .env && forge create contracts/src/Counter.sol:Counter --rpc-url $FORGE_RPC_URL --private-key $FORGE_PRIVATE_KEY --etherscan-api-key $ETHERSCAN_API_KEY --verify--profile=optimism-goerli",
    "deploy:base-goerli": "source .env && FOUNDRY_PROFILE=base-goerli forge script contracts/script/BaseGoerli.s.sol:BaseScript --private-key $FORGE_PRIVATE_KEY --etherscan-api-key $ETHERSCAN_API_KEY --verify",
    "deploy:zora-goerli": "FOUNDRY_PROFILE=zora-goerli forge script contracts/script/ZoraGoerli.s.sol:ZoraScript --private-key $FORGE_PRIVATE_KEY --etherscan-api-key $ETHERSCAN_API_KEY --verify",
    "deploy:mode-sepolia": "FOUNDRY_PROFILE=mode-sepolia forge script contracts/script/ModeSepolia.s.sol:ModeScript --private-key $FORGE_PRIVATE_KEY --etherscan-api-key $ETHERSCAN_API_KEY --verify",
    "build": "npm run wagmi && yarn workspace wave-collector build",
    "build:production": "yarn workspace wave-collector build",
    "wagmi": "wagmi generate"
  },
  "dependencies": {
    "@eth-optimism/contracts-bedrock": "^0.12.1",
    "@eth-optimism/contracts-periphery": "^1.0.7",
    "@ethereum-attestation-service/eas-contracts": "^1.0.0-beta.0",
    "@openzeppelin/contracts": "4.7.3",
    "@openzeppelin/contracts-upgradeable": "4.9.2",
    "@wagmi/cli": "^1.3.0",
    "wagmi": "^1.3.9",
    "viem": "^1.4.2"
  },
  "devDependencies": {
    "prettier": "^2.8.4",
    "typescript": "^4.9.5"
  }
}
