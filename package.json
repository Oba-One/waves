{
  "name": "waves-syn",
  "version": "0.0.4",
  "private": true,
  "workspaces": [
    "api",
    "graph"
  ],
  "scripts": {
    "anvil": "source .env && anvil --fork-url $ANVIL_FORK_URL --chain-id $ANVIL_CHAIN_ID",
    "dev": "yarn run wagmi &&  concurrently 'vite --host' 'yarn run dev:api'",
    "dev:api": "yarn workspace waves-api dev",
    "dev:foundry": "yarn run dev & wagmi generate --watch & npm run anvil",
    "lint": "prettier --write \"**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit",
    "wagmi": "wagmi generate",
    "build": "npm run wagmi && vite build --config vite.prod.config.ts",
    "build:production": "vite build --config vite.prod.config.ts",
    "deploy:anvil": "source .env && forge create contracts/src/Counter.sol:Counter --rpc-url http://127.0.0.1:8545 --private-key 0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80 --legacy",
    "deploy:synth": "npx hardhat run contracts/scripts/synth.js",
    "deploy:synth-registry": "npx hardhat run contracts/scripts/synth-registry.js",
    "deploy:waves-registry": "npx hardhat run contracts/scripts/waves-registry.js",
    "deploy:waves-resolver": "npx hardhat run contracts/scripts/waves-resolver.js",
    "deploy:op-goerli": "source .env && FOUNDRY_PROFILE=op-goerli forge script contracts/script/OPGoerli.s.sol:OpScript --private-key $FORGE_PRIVATE_KEY --etherscan-api-key $ETHERSCAN_API_KEY --broadcast",
    "deploy:base-goerli": "source .env && FOUNDRY_PROFILE=base-goerli forge script contracts/script/BaseGoerli.s.sol:BaseScript --private-key $FORGE_PRIVATE_KEY --etherscan-api-key $ETHERSCAN_API_KEY --broadcast",
    "deploy:zora-goerli": "source .env && FOUNDRY_PROFILE=zora-goerli forge script contracts/script/ZoraGoerli.s.sol:ZoraScript --private-key $FORGE_PRIVATE_KEY --etherscan-api-key $ETHERSCAN_API_KEY --broadcast",
    "deploy:mode-sepolia": "source .env && FOUNDRY_PROFILE=mode-sepolia forge script contracts/script/ModeSepolia.s.sol:ModeScript --private-key $FORGE_PRIVATE_KEY --etherscan-api-key $ETHERSCAN_API_KEY --broadcast"
  },
  "dependencies": {
    "@emotion/react": "11.11.1",
    "@rainbow-me/rainbowkit": "^1.0.8",
    "@react-spring/web": "9.7.3",
    "@xstate/react": "3.2.2",
    "buffer": "^6.0.3",
    "ethers": "^6.7.1",
    "process": "^0.11.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-qr-reader": "3.0.0-beta-1",
    "react-router-dom": "6.15.0",
    "siwe": "2.1.4",
    "util": "^0.12.4",
    "viem": "^1.4.2",
    "wagmi": "^1.3.9",
    "xstate": "4.38.2"
  },
  "devDependencies": {
    "@ethereum-attestation-service/eas-contracts": "^1.0.0-beta.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "3.0.4",
    "@nomicfoundation/hardhat-foundry": "1.0.3",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "3.0.0",
    "@nomicfoundation/hardhat-verify": "1.1.1",
    "@openzeppelin/contracts": "4.7.3",
    "@openzeppelin/contracts-upgradeable": "4.7.3",
    "@openzeppelin/hardhat-upgrades": "2.2.1",
    "@typechain/ethers-v6": "^0.4.0",
    "@typechain/hardhat": "^8.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "@types/node": "^20.5.1",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.3",
    "@vitejs/plugin-react": "^3.1.0",
    "@wagmi/cli": "^1.3.0",
    "@xstate/cli": "0.5.2",
    "autoprefixer": "10.4.14",
    "chai": "^4.2.0",
    "concurrently": "8.2.0",
    "cssnano": "6.0.1",
    "daisyui": "3.5.1",
    "dotenv": "16.3.1",
    "hardhat": "2.17.1",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.8",
    "postcss": "8.4.27",
    "prettier": "^2.8.4",
    "solidity-coverage": "^0.8.1",
    "tailwindcss": "3.3.3",
    "ts-node": ">=8.0.0",
    "typechain": "^8.2.0",
    "typescript": "^5.1.6",
    "vite": "^4.1.4",
    "vite-plugin-mkcert": "1.16.0",
    "vite-plugin-pwa": "0.16.4",
    "vite-plugin-svgr": "3.2.0",
    "workbox-build": "7.0.0",
    "workbox-window": "7.0.0"
  }
}
