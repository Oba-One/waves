{
  "name": "waves",
  "version": "0.0.7",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/api",
      "packages/graph",
      "packages/contracts",
      "packages/clients/app"
    ],
    "nohoist": [
      "**/@ethereum-attestation-service/eas-contracts",
      "**/@ethereum-attestation-service/eas-contracts/**",
      "**/@opengsn/contracts",
      "**/@opengsn/contracts/**",
      "**/@openzeppelin/contracts",
      "**/@openzeppelin/contracts/**",
      "**/@openzeppelin/contracts-upgradeable",
      "**/@openzeppelin/contracts-upgradeable/**"
    ]
  },
  "scripts": {
    "lint": "yarn workspace app lint && yarn workspace api lint && yarn workspace contracts lint",
    "dev": "concurrently -n \"APP,API,GRAPH,CONTRACT\" -c \"bgBlue.bold,bgMagenta.bold,bgCyan.bold,bgGreen.bold\" \"yarn dev:app\" \"yarn dev:api\" \"yarn dev:graph\" \"yarn dev:contracts\"",
    "dev:app": "yarn workspace app dev",
    "dev:api": "yarn workspace api dev",
    "dev:graph": "yarn workspace graph dev",
    "dev:contract": "yarn workspace contracts dev",
    "deploy:op-goerli": "",
    "deploy:base-goerli": "",
    "deploy:zora-goerli": "",
    "deploy:mode-sepolia": ""
  },
  "dependencies": {
    "ethers": "^6.7.1",
    "dotenv": "16.3.1",
    "viem": "^1.4.2"
  },
  "devDependencies": {
    "concurrently": "8.2.0",
    "prettier": "^2.8.4",
    "typescript": "^5.1.6"
  }
}
